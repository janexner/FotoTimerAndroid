<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="process_list_item">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textAppearance">@dimen/normal_text_size</item>
    </style>

    <style name="title_view_item">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

</resources>
